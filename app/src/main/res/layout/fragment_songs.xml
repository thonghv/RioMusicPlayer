<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_background"
                    android:padding="5dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:id="@+id/iconSearch"
                        android:layout_width="21dp"
                        android:layout_height="10dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/shuffle_white">
                    </ImageView>
                    <TextView
                        android:id="@+id/shuffleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="13.5dp"
                        android:textStyle="bold"
                        android:text="Play Shuffle"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/white">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="7dp">
                    <ImageView
                        android:id="@+id/iconShuffle"
                        android:layout_width="20dp"
                        android:scaleType="centerCrop"
                        android:layout_height="11dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/shuffle_white">
                    </ImageView>
                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="1dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp">
                    <ImageView
                        android:id="@+id/iconSort"
                        android:layout_width="20dp"
                        android:scaleType="centerCrop"
                        android:layout_height="16dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/sort_white">
                    </ImageView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:background="#4A1E44"
            android:alpha="0.3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycleViewSongs">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>