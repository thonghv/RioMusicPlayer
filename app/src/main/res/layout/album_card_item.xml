<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        card_view:contentPadding="5dp"
        card_view:contentPaddingRight="0dp"
        android:elevation="10dp"
        card_view:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp">

                <ImageView
                    android:id="@+id/cardImageView"
                    android:layout_width="120dp"
                    android:layout_height="125dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bk_song" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomCardLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/md_amber_400">

                <TextView
                    android:id="@+id/cardAlbumName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:text="Hello Morning" />
                <TextView
                    android:id="@+id/cardAlbumArtist"
                    android:layout_below="@id/cardAlbumName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:textSize="10.5dp"
                    android:ellipsize="end"
                    android:text="Good morn ..." />

            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>