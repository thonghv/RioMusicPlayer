<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        card_view:contentPadding="5dp"
        card_view:contentPaddingRight="0dp"
        android:elevation="10dp"
        card_view:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp">

                <ImageView
                    android:id="@+id/cardImageView"
                    android:layout_width="120dp"
                    android:layout_height="125dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bk_song" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomCardLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#403f4d">

                <LinearLayout
                    android:id="@+id/albumNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/cardAlbumName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:text="Hello Morning" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/albumNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/cardAlbumArtist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:textSize="10.5dp"
                            android:ellipsize="end"
                            android:text="Good morn ..." />

                        <TextView
                            android:id="@+id/cardNumberOfSong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:textSize="10.5dp"
                            android:ellipsize="end"
                            android:text="15 songs" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_more_white"
                            >
                        </ImageView>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>