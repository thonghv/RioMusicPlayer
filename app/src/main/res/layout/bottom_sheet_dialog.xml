<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottomSheetDialogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/headerSheetDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="PLay List Target"
                android:textColor="#737373"
                android:textStyle="bold"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="22dp"
                android:src="@drawable/ic_play_next_black"
                android:tint="#737373" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/playNext"
                android:textColor="#737373"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:id="@+id/r_01"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:background="#EDEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="22dp"
                android:src="@drawable/ic_add_folder_black"
                android:tint="#737373" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/addInPlayNext"
                android:textColor="#737373"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:background="#EDEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="22dp"
                android:src="@drawable/ic_edit_black"
                android:tint="#737373" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/changeName"
                android:textColor="#737373"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:background="#EDEEEE" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="22dp"
                android:src="@drawable/ic_recycle_black"
                android:tint="#737373" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/delete"
                android:textColor="#737373"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:background="#EDEEEE" />

    </LinearLayout>
</LinearLayout>